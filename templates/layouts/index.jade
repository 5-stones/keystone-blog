each post in posts
  div&attributes(postAttributes)
    .row&attributes(headerAttributes)
      a(href="/blog/posts/"+post.slug)
        h2= post.name
    .row&attributes(subHeaderAttributes)
      span= moment(post.createdAt).format(dateFormat)
      | &nbsp;
      - var needsComma = false
      each tag in post.tags
        if needsComma
          | , 
        a(href="/blog/tags/"+tag.slug)= tag.name
        - needsComma = true
      | &nbsp;
      a(href="/blog/posts/"+post.slug+"#comments") Comments
    .row&attributes(previewAttributes)
      p= post.preview
    .row&attributes(buttonAttributes)
      a(href="/blog/posts/"+post.slug) Read more
