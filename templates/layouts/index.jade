each post in obj.results
  .row.post-name
    a(href="/blog/"+post.slug)
      h2= post.name
  .row.post-details
    span= moment(post.createdAt).format(dateFormat)
    | &nbsp;
    - var needsComma = false
    each tag in post.tags
      if needsComma
        | , 
      a(href="/blog?tag="+tag.slug)= tag.name
      - needsComma = true
    | &nbsp;
    a(href="/blog/"+post.slug+"#comments") Comments
  .row.post-preview
    p= post.preview
  .row.read-more
    a(href="/blog/"+post.slug) Read more
if obj.totalPages > 1
  ul.pagination
    if obj.previous
      li: a(href='?page=' + obj.previous)= Previous
    else
      li.disabled: a(href='?page=' + 1)= Previous
    each p, i in obj.totalPages
      li(class=obj.currentPage === p ? 'active' : null)
        a(href='?page=' + (p === '...' ? (i ? obj.totalPages : 1) : p ))= p
    if obj.next
      li: a(href='?page=' + obj.next)= Next
    else
      li.disabled: a(href='?page=' + obj.totalPages)= Next
