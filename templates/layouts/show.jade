.container.show
  .row.post-name
    h2= obj.name
  .row.post-details
    span= moment(obj.createdAt).format(dateFormat)
    span.tags
      - var needsComma = false
      each tag in obj.tags
        if needsComma
          | , 
        a(href="/blog?tag="+tag.slug)= tag.name
        - needsComma = true
    span
      a(href="#comments") Comments
  .row.post-author
    if obj.author.image != undefined && obj.author.image != "{}"
      img(src=obj.author.image.url)
    | By #{obj.author.name.first} #{obj.author.name.last}
  .row.blog-body
    != obj.body.html
#comments
