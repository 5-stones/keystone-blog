.container.show
  .row.post-name
    h2= obj.name
  .row.post-details
    span= moment(obj.createdAt).format(dateFormat)
    span.tags
      - var needsComma = false
      each tag in obj.tags
        if needsComma
          | , 
        a(href="/blog?tags="+tag.slug)= tag.name
        - needsComma = true
    span
      a(href="#comments") Comments
  .row.blog-body
    != obj.body.html
#comments
