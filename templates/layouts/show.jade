.container.show
  .row.post-name
    h2= obj.name
  .row.post-details
    span= moment(obj.createdAt).format(dateFormat)
    span.tags
      - var needsComma = false
      each tag in obj.tags
        if needsComma
          | , 
        a(href="/blog?tag="+tag.slug)= tag.name
        - needsComma = true
    span
      a(href="#disqus_thread") Comments
  .post-author(style="height:900px;")
    if obj.author.image != "{}"
      | POST AUTHOR: 
      != obj.author
      br
      | POST AUTHOR IMAGE: 
      != typeof obj.author.image
      br
    | By #{obj.author.name.first} #{obj.author.name.last}
  .row.blog-body
    != obj.body.html
#disqus_thread
